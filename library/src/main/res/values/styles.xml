<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Preference.Overlay" parent="PreferenceThemeOverlay.v14" />

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="CardView.Light.AfternoonTea" parent="CustomCardView">
        <item name="cardBackgroundColor">@color/saraba_background</item>
    </style>

    <style name="CustomCardView.Light">
        <item name="cardBackgroundColor">@color/light_background</item>
    </style>

    <style name="CustomCardView.Dark">
        <item name="cardBackgroundColor">@color/dark_card_view</item>
    </style>

    <style name="CardView.Dark.NightMode.Amoled" parent="CustomCardView">
        <item name="cardBackgroundColor">@android:color/black</item>
    </style>

    <style name="Widget.Design.TabLayout.Keyboard" parent="Widget.Design.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <!-- Dense language scripts that require extra line height to accommodate larger glyphs,
    including Chinese, Japanese, and Korean. -->
    <!-- https://www.google.com/design/spec/style/typography.html -->
    <style name="TextAppearance.AppCompat.Subhead" parent="Base.TextAppearance.AppCompat.Subhead" tools:ignore="PrivateResource">
        <item name="android:textSize">@dimen/dense_text_size_subheader</item>
    </style>

    <style name="TextAppearance.AppCompat.Body1" parent="Base.TextAppearance.AppCompat.Body1" tools:ignore="PrivateResource">
        <item name="android:textSize">@dimen/dense_text_size_body_1</item>
    </style>

    <style name="TextAppearance.AppCompat.Body2" parent="Base.TextAppearance.AppCompat.Body2" tools:ignore="PrivateResource">
        <item name="android:textSize">@dimen/dense_text_size_body_2</item>
    </style>

    <style name="TextAppearance.AppCompat.Small" parent="Base.TextAppearance.AppCompat.Small" tools:ignore="PrivateResource">
        <item name="android:textSize">@dimen/dense_text_size_small</item>
    </style>

    <style name="TextAppearance.AppCompat.Shadow" parent="Base.TextAppearance.AppCompat">
        <item name="android:shadowColor">?attr/textShadowColor</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="Animation.Recreate" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/activity_exit</item>
    </style>

    <style name="TextAppearance.ThreadList.Title" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_size_thread_list_title</item>
    </style>

    <style name="TextAppearance.ThreadList.Title.Hint">
        <item name="android:textSize">@dimen/text_size_thread_list_title_hint</item>
    </style>

    <style name="TextAppearance.ThreadList.Title.Colored" parent="TextAppearance.ThreadList.Title.Hint">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="WindowAnimations">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/fade_out_rapidly</item>
    </style>

    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

    </style>

    <style name="CustomToolbarTitle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white_100p</item>
    </style>

    <style name="CustomToolbarTitle.Light" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black_95p</item>
    </style>
</resources>
