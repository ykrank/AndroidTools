<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Translucent.AfternoonTea" parent="Base.Theme.Light.Translucent.AfternoonTea" />

    <style name="Theme.Translucent.Light" parent="Base.Theme.Light.Translucent" />

    <style name="Theme.Translucent.Amber" parent="Base.Theme.Light.Translucent.Amber" />

    <style name="Theme.Translucent.Green" parent="Base.Theme.Light.Translucent.Green" />

    <style name="Theme.Translucent.LightBlue" parent="Base.Theme.Light.Translucent.LightBlue" />

    <style name="Theme.Translucent.Purple" parent="Base.Theme.Light.Translucent.Purple" />

    <style name="Theme.Translucent.Dark" parent="Base.Theme.Dark.Translucent" />

    <style name="Theme.Translucent.Dark.NightMode" parent="Base.Theme.Dark.Translucent.NightMode" />

    <style name="Theme.Translucent.Dark.NightMode.Amoled" parent="Base.Theme.Dark.Translucent.NightMode.Amoled" />

    <style name="Base.Theme.Light.Translucent.AfternoonTea" parent="Base.Theme.Light.Translucent">
        <item name="colorPrimaryDark">@color/saraba_main_top_color_dark</item>
        <item name="colorPrimary">@color/saraba_main_top_color</item>
        <item name="android:colorBackground">@color/saraba_main_bg_color</item>
        <item name="colorAccent">@color/light_blue_700</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="cardViewStyle">@style/CardView.Light.AfternoonTea</item>
    </style>

    <style name="Base.Theme.Light.Translucent.Amber" parent="Base.Theme.Light.Inverse.Translucent">
        <item name="colorPrimaryDark">@color/amber_700</item>
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorAccent">@color/deep_orange_A200</item>
    </style>

    <style name="Base.Theme.Light.Translucent.Green" parent="Base.Theme.Light.Inverse.Translucent">
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorAccent">@color/deep_orange_A200</item>
    </style>

    <style name="Base.Theme.Light.Translucent.LightBlue" parent="Base.Theme.Light.Inverse.Translucent">
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorAccent">@color/pink_A200</item>
    </style>

    <style name="Base.Theme.Light.Translucent.Purple" parent="Base.Theme.Light.Inverse.Translucent">
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/pink_A200</item>
    </style>

    <style name="Base.Theme.Dark.Translucent.NightMode" parent="Base.Theme.Dark.Translucent">
        <item name="colorAccent">@color/dark_cyan</item>
        <item name="android:textColorPrimary">@color/white_69p</item>
        <item name="android:textColorLink">@color/teal_200_70p</item>
        <item name="navigationViewTheme">@style/Theme.Dark.NightMode.NavigationView</item>
    </style>

    <style name="Base.Theme.Dark.Translucent.NightMode.Amoled" parent="Base.Theme.Dark.Translucent">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="navigationViewTheme">@style/Theme.Dark.NightMode.Amoled.NavigationView</item>
        <item name="cardViewStyle">@style/CardView.Dark.NightMode.Amoled</item>
        <item name="cardViewContainerBackground">@android:color/black</item>
    </style>

    <style name="Base.Theme.Light.Translucent" parent="Origin.Theme.Light.Translucent">

    </style>

    <style name="Base.Theme.Light.Inverse.Translucent" parent="Origin.Theme.Light.Inverse.Translucent">

    </style>

    <style name="Base.Theme.Dark.Translucent" parent="Origin.Theme.Dark.Translucent">

    </style>

    <style name="Origin.Theme.Light.Translucent" parent="Origin.Theme.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>
    </style>

    <style name="Origin.Theme.Light.Inverse.Translucent" parent="Origin.Theme.Light.Inverse">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>
    </style>

    <style name="Origin.Theme.Dark.Translucent" parent="Origin.Theme.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>
    </style>

    <style name="Theme.Gallery" parent="Base.Theme.Gallery" />

    <style name="Base.Theme.Gallery" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="iconClose">@drawable/ic_close_white_24dp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>